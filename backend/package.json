{
  "name": "thegame-backend",
  "private": true,
  "version": "0.0.1",
  "type": "module",
  "engines": {
    "node": ">=20"
  },
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "build": "tsup src/server.ts --format esm --dts false --sourcemap",
    "start": "node dist/server.js",
    "lint": "eslint .",
    "test": "vitest run",
    "db:migrate": "node-pg-migrate up",
    "db:migrate:down": "node-pg-migrate down",
    "db:migrate:create": "node-pg-migrate create"
  },
  "dependencies": {
    "@fastify/cors": "^9.0.1",
    "@fastify/env": "^4.0.0",
    "fastify": "^4.29.1",
    "zod": "^3.23.8",
    "jose": "^6.1.0",
    "@node-rs/argon2": "^2.0.2",
    "pg": "^8.13.1"
  },
  "devDependencies": {
    "@types/node": "^22.10.2",
    "@types/pg": "^8.11.10",
    "@typescript-eslint/eslint-plugin": "^8.19.1",
    "@typescript-eslint/parser": "^8.19.1",
    "eslint": "^9.17.0",
    "typescript": "^5.7.2",
    "tsup": "^8.3.5",
    "tsx": "^4.19.2",
    "vitest": "^2.1.8",
    "node-pg-migrate": "^7.9.0"
  }
}
